{
  "name": "the-hub",
  "version": "1.0.0",
  "description": "Integration Server for multi-marketplace order and inventory management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "migrate": "NODE_OPTIONS='-r ts-node/register' knex migrate:latest",
    "migrate:rollback": "NODE_OPTIONS='-r ts-node/register' knex migrate:rollback",
    "seed": "NODE_OPTIONS='-r ts-node/register' knex seed:run",
    "migrate:make": "knex migrate:make",
    "seed:make": "knex seed:make",
    "test:db": "ts-node src/scripts/test-db.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "knex": "^3.0.0",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2"
  }
}
